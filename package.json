{
  "name": "jitterbit",
  "displayName": "Jitterbit",
  "description": "Language support for Jitterbit Script programming language",
  "author": "Michał Kapała",
  "publisher": "michal-kapala",
  "license": "MIT",
  "version": "1.0.1",
  "icon": "./icons/jitterbit_icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/michal-kapala/vscode-jitterbit"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "jitterbit"
  ],
  "activationEvents": [],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Jitterbit LSP configuration",
      "properties": {
        "jitterbit.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "jitterbit.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "jitterbit",
        "aliases": [
          "Jitterbit Script",
          "jitterbit"
        ],
        "extensions": [
          ".jitterbit",
          ".jb"
        ],
        "icon": {
          "light": "./icons/jitterbit_icon.png",
          "dark": "./icons/jitterbit_icon.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jitterbit",
        "scopeName": "source.jitterbit",
        "path": "./syntaxes/jitterbit.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Jitterbit Dark Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/jitterbit-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "mocha": "^9.2.1",
    "typescript": "^4.8.4"
  }
}
